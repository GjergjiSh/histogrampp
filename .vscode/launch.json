{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug histogram_tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/histogram_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                // Uncomment for verbose debugging output. Value doesn't matter.
                // { "name": "DEBUG_CYCLE_TIMES", "value": "1" },
                // { "name": "DEBUG_BINS", "value": "1" },
                { "name": "PRINT_VERBOSE", "value": "1" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
           "preLaunchTask": "build"
        }
    ]
}
